<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="285.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainPkg.UploadController">
    <center>
        <VBox alignment="CENTER" spacing="10">
         <Label />
            <Label text="Upload MP4 Video">
            <font>
               <Font name="Franklin Gothic Medium" size="18.0" />
            </font></Label>
            <Button onAction="#chooseVideo" text="Select video and fetch title">
            <font>
               <Font name="Franklin Gothic Medium" size="18.0" />
            </font></Button>
            <TextField fx:id="titleField" promptText="Enter Title" />
            <Button onAction="#uploadVideo" text="Upload video">
            <font>
               <Font name="Franklin Gothic Medium" size="18.0" />
            </font></Button>
        </VBox>
    </center>
</BorderPane>
